@echo off

cd /d %~dp0

rem ============================================================
rem Do the ADD
rem ============================================================
title PBackup - ADD
git add .

rem ============================================================
rem Do the COMMIT
rem ============================================================
title PBackup - COMMIT
git commit -m Update

rem ============================================================
rem Do the PUSH
rem ============================================================
title PBackup - PUSH
git push
if errorlevel 1 goto error

rem ============================================================
rem Finished
rem ============================================================
goto :EOF

rem ============================================================
rem Error
rem ============================================================
:error
pause
goto :EOF